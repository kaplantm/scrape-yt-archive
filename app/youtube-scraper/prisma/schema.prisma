// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id              Int               @id @default(autoincrement())
  title           String?
  description     String
  videoUrlId      String            @unique
  uploadDate      String? // only sometimes displayed by youtube. i might not use this, but don't want to throw it away
  Tags            Tag[]
  Categories      Category[]
  Author          User?             @relation("author", fields: [authorId], references: [id])
  authorId        Int?
  FeatureInstance FeatureInstance[]
  FeatureDate     FeatureDate       @relation(fields: [featureDateId], references: [id])
  featureDateId   Int
  User            User?             @relation(fields: [userId], references: [id])
  userId          Int?

  @@index([authorId, title, videoUrlId])
}

model FeatureInstance {
  id            Int         @id @default(autoincrement())
  age           String? // i might not use this, but don't want to throw it away
  comments      Int?
  ratings       Int?
  stars         Int?
  views         Int?
  Selector      User?       @relation("selector", fields: [selectorId], references: [id])
  selectorId    Int?
  FeatureDate   FeatureDate @relation(fields: [featureDateId], references: [id])
  featureDateId Int
  Video         Video       @relation(fields: [videoId], references: [id])
  videoId       Int

  @@unique([videoId, featureDateId])
  @@index([featureDateId, videoId])
}

model User {
  id                Int               @id @default(autoincrement())
  username          String            @unique
  link              String            @unique
  Videos            Video[]           @relation("author")
  Selected_features FeatureInstance[] @relation("selector")
  Video             Video[]
}

model FeatureDate {
  id              Int               @id @default(autoincrement())
  epoch_date      BigInt            @unique
  Video           Video[]
  FeatureInstance FeatureInstance[]
}

model Tag {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  Videos Video[]
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  Videos Video[]
}
